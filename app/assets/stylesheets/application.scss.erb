@font-face {
  font-family: 'HelveticaNeueBold';
  src: url("<%= asset_path('HelveticaNeue-Bold.eot') %>");
  src: url("<%= asset_path('HelveticaNeue-Bold.eot?#iefix') %>") format('embedded-opentype'), url("<%= asset_path('HelveticaNeue-Bold.woff') %>") format('woff'), url("<%= asset_path('HelveticaNeue-Bold.ttf') %>") format('truetype'), url("<%= asset_path('HelveticaNeue-Bold.svg#HelveticaNeueBold') %>") format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'HelveticaNeueMedium';
  src: url("<%= asset_path('HelveticaNeue-Medium.eot') %>");
  src: url("<%= asset_path('HelveticaNeue-Medium.eot?#iefix') %>") format('embedded-opentype'), url("<%= asset_path('HelveticaNeue-Medium.woff') %>") format('woff'), url("<%= asset_path('HelveticaNeue-Medium.ttf') %>") format('truetype'), url("<%= asset_path('HelveticaNeue-Medium.svg#HelveticaNeueMedium') %>") format('svg');
  font-weight: normal;
  font-style: normal;
}

html,
body {
  width:100%;
  height:100%;
  margin: 0;
  padding: 0;
  font-weight: normal;
  font-style: normal;
  text-decoration: none;
  font-family:Arial;
  background: #3972B0;
  cursor: default;
}

#main-container {
  margin: 50px 0 50px -335px;
  padding: 0;
  position: absolute;
  width: 670px;
  min-width: 670px;
  left: 50%;

  #date-panel {
    width: 373px;
    height: 42px;
    background: white;
    font-size: 20px;
    color: #424242;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: 0 1px rgba(0, 0, 0, 0.5);
    -webkit-box-shadow: 0 1px 1px rgba(0, 0, 0, 0.5);
    float: left;
    cursor: pointer;

    span {
      position: relative;
      top: 11px;
      left: 11px;
    }
  }

  #btn-search {
    position: relative;
    top: -5px;
    left: 3px;
    width: 135px;
    height: 54px;
    background: url("btn_search.png") no-repeat;
    float: left;
    font-size: 16px;
    color: #FFFFFF;
    text-align: center;
    cursor: pointer;

    span {
      position: relative;
      top: 18px;
      left: -1px;
    }
  }

  #calendar {
    width: 670px;
    height: 535px;
    margin: 52px 0 20px 0;
    text-align: center;

    background: #53B3CF; /* Old browsers */
    background: -moz-linear-gradient(top,  #53B3CF 0%, #41B2D3 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#53B3CF), color-stop(100%,#41B2D3)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(top,  #53B3CF 0%,#41B2D3 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(top,  #53B3CF 0%,#41B2D3 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(top,  #53B3CF 0%,#41B2D3 100%); /* IE10+ */
    background: linear-gradient(to bottom,  #53B3CF 0%,#41B2D3 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#53B3CF', endColorstr='#41B2D3',GradientType=0 ); /* IE6-9 */

    box-shadow: inset 1px 1px 0px rgba(255, 255, 255, 0.35), 0 2px 8px rgba(0, 0, 0, 0.5);
    -moz-box-shadow: inset 1px 1px 0px rgba(255, 255, 255, 0.35), 0 2px 8px rgba(0, 0, 0, 0.5);
    -webkit-box-shadow: inset 1px 1px 0px rgba(255, 255, 255, 0.35), 0 2px 8px rgba(0, 0, 0, 0.5);

    .title {
      padding-top: 16px;
      font-family: "HelveticaNeueBold", Arial;
      font-size: 14px;
      color: #fff;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.35);
    }

    #month-picker {
      list-style: none;
      margin-top: 10px;

      li {
        display: inline-block;
        font-size: 12px;
        color: #fff;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.32);
        padding: 6px 6px 1px 4px;
        width: 25px;
        height: 15px;
      }

      li:hover {
        cursor: pointer;
        opacity: 0.7;
      }

      li.left {
        position: relative;
        top: 9px;
        padding-right: 0;
        background: url("month_picker.png") no-repeat 12px 0;
      }

      li.right {
        position: relative;
        top: 9px;
        padding-left: 0;
        background: url("month_picker.png") no-repeat -16px 0;
      }

      li.active {
        background: #66ccff;
        border: 1px solid #fff;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius:4px;
        box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.35);
        -moz-box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.35);
        -webkit-box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.35);
        opacity: 0.9;
        cursor: default;
      }
    }
  }
}

